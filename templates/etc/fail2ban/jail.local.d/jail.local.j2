{% if item.comment is defined and item.comment %}
# {{ item.comment }}
{% endif %}
[{{ item.name }}]
{% for key, value in item.iteritems() %}
{%   if key not in [ 'name', 'filename', 'delete', 'comment', 'action', 'ignoreip' ] %}
{%     if value is string %}
{{ "%-14s = %s" | format(key, value) }}
{%     else %}
{{ "%-14s = %s" | format(key, value | join(",")) }}
{%     endif %}
{%   elif key == 'action' %}
action         = {{ "%(" + value + ")s" }}
{%   elif key == 'ignoreip' %}
ignoreip       = {{ value | join(" ") }}
{%   endif %}
{% endfor %}

