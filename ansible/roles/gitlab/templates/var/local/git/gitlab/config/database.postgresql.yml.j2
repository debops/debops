  host: {{ gitlab_database_server }}
  port: {{ gitlab_database_port | d('5432') }}
{# {% else                                                                         %}
  socket: {{ gitlab_database_map[gitlab__database].dbhost | d('/var/run/postgresql') }}
{% endif                                                                        %} #}

