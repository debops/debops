[Unit]
Description=Ghostunnel {{ item.name }} service

[Service]
Restart=always
User={{ ghostunnel__user }}
EnvironmentFile=/etc/default/ghostunnel-{{ item.name }}
AssertFileIsExecutable={{ ghostunnel__binary }}
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ghostunnel-{{ item.name }}
ExecStart=-/usr/local/bin/ghostunnel {{ item.mode }} $ARGS

[Install]
WantedBy=multi-user.target