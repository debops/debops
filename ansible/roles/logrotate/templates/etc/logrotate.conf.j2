{%     endif %}
{%     if section.prerotate|d() %}
    prerotate
{{ section.prerotate | regex_replace('\n$','') | indent(8, true) }}
    endscript
{%     endif %}
{%     if section.postrotate|d() %}
    postrotate
{{ section.postrotate | regex_replace('\n$','') | indent(8, true) }}
