{%     endif %}
{%     if section.options|d() %}
{{ section.options | regex_replace('\n$','') | indent(4, true) }}
{%     endif %}
{%     if section.firstaction|d() %}
    firstaction
{{ section.firstaction | regex_replace('\n$','') | indent(8, true) }}
