{%           endif %}
{%           set _ = logstash__tpl_config.update({ name_exploded[0]: current_dict }) %}
{%           if item.comment|d() %}
{%             set _ = logstash__tpl_comment.update({ item.name: item.comment }) %}
{%           endif %}
{%         endif %}
{%       elif item.state|d('present') == 'absent' %}
{%         set name_exploded = item.name.split('.') %}
{%         set current_dict = logstash__tpl_config[name_exploded[0]] | d({}) %}
{%         set _ = current_dict.pop(name_exploded[1:] | join('.'), None) %}
{%         if current_dict.keys() | length > 0 %}
{%           set _ = logstash__tpl_config.update({ name_exploded[0]: current_dict }) %}
{%         else %}
{%           set _ = logstash__tpl_config.pop(name_exploded[0], None) %}
{%         endif %}
{#         set _ = logstash__tpl_config.pop(item.name, None) #}
{%       endif %}
{%     else %}
{%       for key, value in item.items() %}
{%         set name_exploded = key.split('.') %}
