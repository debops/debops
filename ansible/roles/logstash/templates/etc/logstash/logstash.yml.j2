{%         set _ = current_dict.update({ name_exploded[1:] | join('.'): value }) %}
{%         set _ = logstash__tpl_config.update({ name_exploded[0]: current_dict }) %}
{%       endfor %}
{%     endif %}
{%   endif %}
{% endfor %}
