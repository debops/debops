-- {{ ansible_managed }}
{% import 'templates/import/debops__tpl_macros.j2' as debops__tpl_macros with context %}
{% import 'templates/import/prosody_macros.j2' as prosody_macros without context %}
-- Prosody '{{ item.key }}' Component Configuration File

{% if item.value.plugin_name|d() %}
Component "{{ item.key }}" "{{ item.value.plugin_name|d() }}"
{% else %}
Component "{{ item.key }}"
{% endif %}
{% if item.value.params|d() %}
  {% for key, value in item.value.params.items() %}
  {{ key }} = {{ prosody_macros.lua_print_variable(value)|indent(2,true)  }}
  {% endfor %}
{% endif %}
{% if item.value.modules_enabled|d() %}
  modules_enabled = {{ prosody_macros.lua_print_variable(item.value.modules_enabled)|indent(4,true) }}
{% endif %}
