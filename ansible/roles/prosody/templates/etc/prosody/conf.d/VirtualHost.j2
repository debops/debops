-- {{ ansible_managed }}
{% import 'templates/import/debops__tpl_macros.j2' as debops__tpl_macros with context %}
{% import 'templates/import/prosody_macros.j2' as prosody_macros without context %}
-- Virtual Host Configuration File


{% set prosody__tpl_pki_realm = item.pki_realm|d(prosody__pki_realm) %}
{% set prosody__tpl_pki_realm_path = prosdoy__pki_realm_path + "/" + prosody__tpl_pki_realm %}
VirtualHost "{{ item.name|mandatory }}"
  enabled = {{ item.enabled|d(true) }}

  ssl = {
    certificate = "{{ item.tls_crt | d(prosody__tpl_pki_realm_path + "/" + (item.pki_crt|d(prosody__pki_crt_filename))) }}";
    key =  "{{ item.tls_key | d(prosody__tpl_pki_realm_path + "/" + (item.pki_key|d(prosody__pki_key_filename))) }}";
  }
{% if item.admins|d() %}
  admins = {{ prosody_macros.lua_print_variable(item.admins)|indent(4,true) }}
{% endif %}
{% if item.authentication|d() %}
  authentication = {{ prosody_macros.lua_print_variable(item.authentication) }}
{% endif %}
{% if item.modules_enabled|d() %}
  modules_enabled = {{ prosody_macros.lua_print_variable(item.modules_enabled)|indent(4,true) }}
{% endif %}
{% if item.modules_disabled|d() %}
  modules_disabled = {{ prosody_macros.lua_print_variable(item.modules_disabled)|indent(4,true) }}
{% endif %}
